<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/text_field_margin"
        android:layout_marginTop="@dimen/text_field_margin"
        android:textColorHint="@color/grey">

        <EditText
            android:id="@+id/sup_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nom du fournissuer"
            android:inputType="textPassword"
            android:textColor="@color/orange"
            android:textColorHighlight="@color/grey"
            android:textColorHint="@color/grey" />
    </android.support.design.widget.TextInputLayout>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/add_sup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/buttons_margin"
        android:layout_marginTop="@dimen/buttons_margin"
        android:background="@color/orange"
        android:padding="@dimen/buttons_padding"
        android:text="@string/sup"
        android:textColor="@color/background" />

</LinearLayout>